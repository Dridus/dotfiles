[colors]
background = ${xrdb:background:#444}
background-alt = #444
foreground = ${xrdb:foreground:#dfdfdf}
foreground-alt = #999999

primary = ${xrdb:color2:#e60053} 
secondary = ${xrdb:color1:#e60053} 
alert = ${xrdb:color1:#e60053} 

[bar/main]
; monitor = ${env:MONITOR:eDP1}
width = 100%
height = 40
offset-y = 0%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

enable-ipc = true

line-size = 3
line-color = #f00

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 3

font-0 = Fira Code Retina:size=7;1
font-1 = Font Awesome 5 Free Solid:size=9;3

modules-left = ewmh
modules-center = date
modules-right = xkeyboard memory cpu filesystem battery powermenu

tray-position = right
tray-padding = 2
override-redirect = true
cursor-click = pointer
cursor-scroll = ns-resize

dpi-x = 226
dpi-y = 226

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "%{T1} "
format-prefix-foreground = ${colors.foreground-alt}
; format-prefix-underline = #f1fa8c 

label-layout = %layout%
; label-layout-underline = #f1fa8c 

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
; label-indicator-underline = #f1fa8c 

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted =  %{F#8be9fd}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/ewmh]
type = internal/xworkspaces
; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = false
enable-click = true
enable-scroll = false
label-active-foreground = ${colors.foreground}
label-active-background = ${colors.background}
label-active-underline = ${xrdb:color4} 
label-empty-padding = 2
label-active-padding = 2
label-urgent-background = ${colors.primary}
; label-occupied-padding = 2

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
